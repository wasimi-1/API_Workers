@model PageResult<WorkerEntity>

<br/>
<div class="=continer p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Pracownicy</h1>
        </div>
        <div class="col text-end p1-1">
             <a asp-controller="Workers" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Dodaj nowego pracownika</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Stanowisko</th>
                <th>Zarobki</th>
                <th>Adres e-mail</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.items)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Title</td>
                    <td>@item.Salary</td>
                    <td>@item.EmailAddress</td>
                    <td class="text-end">

                        <a asp-controller="Workers" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-outline-success"><i class="bi bi-pencil"></i> Edytuj</a>

                        <a asp-controller="Workers" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash3"></i> Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pagination">
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@((Model.CurrentPage -1))" class="btn btn-primary">Poprzednia</a>
    }
    <span>Strona @Model.CurrentPage z @Model.TotalPages</span>
    @if (Model.HasNextPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@((Model.CurrentPage +1))" class="btn btn-primary">Następna</a>
    }
</div>